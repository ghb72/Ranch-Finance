# RanchoFinanzas Backend - Environment Variables
# Copy to .env and fill in your values.

# Google Sheets credentials (JSON string from service account)
# GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Or use a local file path instead
# GOOGLE_CREDENTIALS_FILE=credentials.json

# Name of the Google Spreadsheet to use
SPREADSHEET_NAME=RanchoFinanzas

# Email to auto-share the spreadsheet with (optional)
# SHARE_EMAIL=you@gmail.com

# Server port
PORT=8000

# CORS allowed origins (comma-separated, use * for dev)
ALLOWED_ORIGINS=*
